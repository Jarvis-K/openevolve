{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true
  },
  "include": ["app", "components", "lib", "e2e"],
  "exclude": ["node_modules"]
}
